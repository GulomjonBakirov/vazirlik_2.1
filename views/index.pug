extends layout

block content
  include header
  != messages('message', locals)
  if errors 
    each error, i in errors
      div(class="alert alert-danger") #{error.msg}
  h1= title
  p Welcome to #{title}
  a.btn.btn-primary(href="/Reg" type='button') Registratsiya
  a.btn.btn-dark(href="/Log" type='button') Login
  a.btn.btn-danger(href="/restore" type='button') Login yoki parolingizni unutdingizmi?
